<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/ryulab_title">

    <com.android.settingslib.widget.TopIntroPreference
        android:key="ryulab_top_intro"
        android:title="@string/ryulab_summary"
        settings:searchable="false"/>


    <PreferenceCategory
        android:id="@+id/other_menu"
        android:title="@string/other_menu_title">

        <!-- Misc -->
        <Preference
            android:key="misc_category"
            android:title="@string/misc_title" 
            android:fragment="org.ryuui.lab.fragments.Miscellaneous"
            android:icon="@drawable/ic_settings_misc"
            settings:layout="@layout/interface_card_single_unsummary" />
    </PreferenceCategory> 
</PreferenceScreen>
